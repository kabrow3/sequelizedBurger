<div class="row">
  <div class="col col-lg-4"></div>
  <div class="col col-lg-4 text-center">
    <img src="/assets/img/burger.png" alt="burgers" class="img-thumbnail" style="width:40%; height:auto">
    <h2 id="inputTitle">Eat-Da-Burger!</h2>
 </div>
 <div class="col col-lg-4"></div>
</div>

<div class="row">
  <div class="col col-lg-1"></div>
  <div class="col col-lg-4">
    <ul>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="col col-lg-2"></div>

  <div class="col col-lg-4">
  <div class="col col-lg-4 text-right">
    <h5>Devoured</h5>
  </div>  
    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
    </ul>

  </div>

  <div class="col col-lg-1"></div>
</div>


<div class="row">
  <div class="col col-lg-4"></div>
  <div class="col col-lg-4 text-center">
    
    <form id="create-burger" class="create-form">

      <div class="form-group">
        <input type="text" style="width:70%; height:100px;" id="ca" name="burger_name">
        <br>
        <button id="submit-burger" type="submit" class="btn btn-info">Submit</button>
    </form>

    <p>Enter a burger you want to eat. Then click the Submit button.</p>
    </div>
    <div class="col col-lg-4"></div>
  </div>